@model Product
@{
    ViewData["Title"] = "Details";

}


    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="~/img/@Model.ProductPhotoUrl" class="img-thumbnail" alt="@Model.ProductName">
            </div>
            <div class="col-md-6 mt-5">
                <p class="h5">Ürün Başlığı&nbsp;:&nbsp;@Model.ProductTitle</p>
                <p class="h5"><span class="h5 text-primary">Ürün Adı&nbsp;:&nbsp;</span>@Model.ProductName</p>
                <a asp-controller="Dealer" asp-action="Details" asp-route-id="@Model.DealerId"><span class="h5 text-primary text-decoration-none">Satıcı&nbsp;:&nbsp;</span>@Model.Dealer.DealerName</a>
                <p class="h5">
                    <span class="h5 text-primary">Ürün Fiyatı&nbsp;:&nbsp;</span>@Model.ProductPrice.ToString()&nbsp;&#8378;
                </p>
                <form class="mt-3" asp-controller="Basket" asp-action="AddProductForBasket" method="post">
                    <input hidden type="text" id="reUrl" name="reUrl" value="@TempData["url"]" />
                    <input hidden type="text" id="ProductId" name="ProductId" value="@Model.ProductId" />
                    <input type="submit" class="btn btn-warning" value="Ekle" />
                </form>
            </div>
        </div>
        <div class="row mt-3 border-top box-shadow">
            <div class="col">
                <p class="h5 font-weight-bold">Ürün Açıklaması</p>
                <p>&nbsp;&nbsp;@Model.ProductDescription</p>
            </div>
        </div>
    </div>




