@model List<Product>
@{
    ViewData["Title"] = "CategoryProductsList";
}

@if (@Model.Count() == 0)
{
    <p class="alert-danger">Opss... Aradığın bulunamadı!!</p>

}
else
{
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (i % 3 == 0)
        {
            <div class="card-group">
                @{
                    int gidilecek = i + 3;

                    if (gidilecek > Model.Count())
                    {
                        gidilecek = Model.Count();
                    }
                }
                @for (int j = i; j < gidilecek; j++)
                {
                    <div class="card border mt-3 ml-2">
                        <img src="~/img/@Model[j].ProductPhotoUrl" class="card-img-top mx-auto" height="300" width="150" alt="@Model[j].ProductName">
                        <div class="card-body text-center">
                            <h5 class="card-title">@Model[j].ProductTitle</h5>
                            <p class="card-text"><span class="text-info h4">@Model[j].ProductPrice.ToString()&nbsp;&#8378;</span></p>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-controller="Product" asp-route-id="@Model[j].ProductId">Ürünü İncele</a>
                        </div>
                    </div>
                }
            </div>
        }
    }
}



