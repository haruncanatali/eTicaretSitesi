<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AtaliTicaret.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <style>
        .anaNavLink {
            color: #ecf0f1;
            font-weight: bold;
        }

        .anaNavLink:hover{
            transition : 0.6s;
            color : greenyellow;
        }

        .basNavLink {
            color: #ecf0f1;
            font-weight: bold;
        }

        #markaTex {
            font-family: 'Lobster', cursive;
            color: #ecf0f1;
            font-weight: bold;
        }

        #navYazi {
            color: #27ae60;
            font-family: 'Pacifico', cursive;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color:#2c3e50;">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 mx-auto">
                        <li class="nav-item ml-5">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><span class="basNavLink"><i class="fas fa-store">&nbsp;<span id="markaTex">GeldiGeliyor.com</span></i></span></a>
                        </li>
                        <li class="nav-item mx-auto" id="navYazi">
                            <a class="nav-link disabled">İyi Alışverişler</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><span class="anaNavLink">Anasayfa</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dealer" asp-action="Index"><span class="anaNavLink">Satıcılar</span></a>
                        </li>
                        <li class="nav-item mr-3">
                            <a href="/Basket/Index/" style="background-color:#2c3e50;"  class="btn btn-primary">
                                <i class="fas fa-shopping-cart"></i>&nbsp; Sepetim &nbsp;<span class="badge bg-secondary">
                           @await Component.InvokeAsync("SepetUrunSayisi")
                            </span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <form class="d-flex" asp-controller="Product" asp-action="WantedKey" method="get">
                                <input id="key" name="key" class="form-control me-2" type="search" placeholder="Aranacak Ürün Adı" aria-label="Search">
                                <button class="ml-2 btn btn-outline-success" type="submit">Ara</button>
                            </form>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("CategoriesSum")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top mt-5 modal-footer text-muted">
        <div class="container mt-3 text-center">
            &copy; 2021 - Bu Sitenin Tüm Hakları Bilgisayar Mühendisi Adayı Haruncan Atalı Tarafından Saklıdır.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
